---
// 导入配置文件
import { siteConfig } from '../config/site.config.js';

// 从配置文件获取数据
const { personalInfo, linkCategories } = siteConfig;

// 导入favicon
import FaviconICO from '../assets/favicon.ico';

// 导入Remix Icon CSS
import 'remixicon/fonts/remixicon.css';

// 导入主样式文件
import '../styles/main.scss';

// 导入组件
import Header from '../components/Header.astro';
import ProfileInfo from '../components/ProfileInfo.astro';
import ContactInfo from '../components/ContactInfo.astro';
import LinkCategory from '../components/LinkCategory.astro';
import Footer from '../components/Footer.astro';
import UmamiAnalytics from '../components/UmamiAnalytics.astro';
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={FaviconICO}>
    <title>{personalInfo.title}</title>
    <UmamiAnalytics />
  </head>
  <body style={`background-image: url('${personalInfo.background}')`}>
    <div class="container">
      <Header />
      
      <main class="main-content">
        <section class="info-section">
          <ProfileInfo />
          <ContactInfo />
        </section>
        
        <section class="links-section">
          {linkCategories.map((category) => (
            <LinkCategory category={category} />
          ))}
        </section>
      </main>
      
      <Footer />
    </div>
  </body>
</html>