---
// 导入配置文件
import { siteConfig } from '../config/site.config.js';

// 从配置文件获取数据
const { personalInfo, linkCategories, socialLinks } = siteConfig;

// 导入本地头像图片
import LocalAvatar from '../assets/avatar.png';

// 导入favicon
import FaviconICO from '../assets/favicon.ico';

// 导入Remix Icon CSS
import 'remixicon/fonts/remixicon.css';
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={FaviconICO}>
    <title>{personalInfo.title}</title>
    <style is:global>
      /* 复古风格CSS */
      @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;700&family=Press+Start+2P&display=swap');
      
      :root {
        --primary-color: #2c2c2c;
        --secondary-color: #8b5a2b;
        --accent-color: #d4af37;
        --background-color: rgba(255, 255, 255, 0.85);
        --text-color: #333;
        --border-color: #c0c0c0;
      }
      
      a {
        text-decoration: none;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Noto Sans SC', sans-serif;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: var(--text-color);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 1.6;
      }

      .container {
        max-width: 1200px;
        width: 90%;
        margin: 2rem auto;
        background: var(--background-color);
        border: 2px solid var(--border-color);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        overflow: hidden;
      }
      
      .header {
        background: var(--primary-color);
        color: white;
        padding: 2rem;
        text-align: center;
        border-bottom: 3px solid var(--accent-color);
      }
      
      .header h1 {
        margin: 0;
        font-family: 'Press Start 2P', cursive;
        font-size: 1.8rem;
        letter-spacing: 2px;
      }
      
      .header p {
        margin: 0.5rem 0 0;
        font-size: 1rem;
      }
      
      .main-content {
        display: flex;
        flex-wrap: wrap;
        padding: 2rem;
      }
      
      .info-section {
        flex: 1;
        min-width: 300px;
        padding: 1rem;
      }
      
      .links-section {
        flex: 1;
        min-width: 300px;
        padding: 1rem;
        border-left: 1px dashed var(--secondary-color);
      }
      
      /* 新增的头像和信息布局 */
      .profile-container {
        display: flex;
        align-items: flex-start;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
      }
      
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid var(--accent-color);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        flex-shrink: 0;
      }
      
      .profile-info {
        flex: 1;
      }
      
      .profile-info h2 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--secondary-color);
        font-weight: bold;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--accent-color);
      }
      
      @media (max-width: 768px) {
        body {
          align-items: flex-start;
          padding: 10px;
        }
        
        .container {
          width: 95%;
          margin: 1rem auto;
        }
        
        .header {
          padding: 1.5rem 1rem;
        }
        
        .header h1 {
          font-size: 1.3rem;
        }
        
        .header p {
          font-size: 0.9rem;
        }
        
        .main-content {
          flex-direction: column;
          padding: 1.5rem 1rem;
        }
        
        .links-section {
          border-left: none;
          border-top: 1px dashed var(--secondary-color);
          margin-top: 1rem;
          padding-top: 2rem;
        }
        
        .section-title {
          font-size: 1.2rem;
        }
        
        .avatar {
          width: 100px;
          height: 100px;
        }
        
        /* 移动端头像和信息布局调整 */
        .profile-container {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }
        
        .profile-info h2 {
          text-align: center;
        }
        
        .links-grid {
          grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
          gap: 0.8rem;
        }
        
        .link-card {
          padding: 0.8rem;
        }
        
        .footer {
          padding: 1rem;
          font-size: 0.7rem;
        }
      }
      
      @media (max-width: 480px) {
        .container {
          width: 98%;
          margin: 0.5rem auto;
        }
        
        .header {
          padding: 1rem 0.5rem;
        }
        
        .header h1 {
          font-size: 1.1rem;
        }
        
        .header p {
          font-size: 0.8rem;
        }
        
        .main-content {
          padding: 1rem 0.5rem;
        }
        
        .info-section, .links-section {
          padding: 0.5rem;
        }
        
        .avatar {
          width: 80px;
          height: 80px;
        }
        
        .section-title {
          font-size: 1.1rem;
          margin-bottom: 0.8rem;
        }
        
        .links-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 0.6rem;
        }
        
        .link-card {
          padding: 0.6rem;
        }
        
        .contact-label {
          width: 60px;
        }
        
        .footer {
          padding: 0.8rem;
          font-size: 0.6rem;
        }
      }
      
      .section-title {
        color: var(--secondary-color);
        font-weight: bold;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--accent-color);
      }
      
      .bio {
        background: rgba(212, 175, 55, 0.1);
        padding: 1rem;
        border-radius: 5px;
        border-left: 4px solid var(--accent-color);
        margin-bottom: 1.5rem;
      }
      
      .contact-info {
        margin-top: 1.5rem;
      }
      
      .contact-item {
        margin-bottom: 0.8rem;
        display: flex;
        align-items: center;
      }
      
      .contact-icon {
        width: 20px;
        margin-right: 10px;
        color: var(--secondary-color);
        text-align: center;
      }
      
      .contact-label {
        font-weight: bold;
        width: 70px;
        color: var(--secondary-color);
      }
      
      .category {
        margin-bottom: 2rem;
      }
      
      .category:last-child {
        margin-bottom: 0;
      }
      
      .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 1rem;
      }
      
      .link-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 5px;
        padding: 1rem;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      
      .link-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        border-color: var(--accent-color);
      }
      
      .link-card a {
        text-decoration: none;
        color: var(--primary-color);
        font-weight: 500;
        display: block;
      }
      
      .footer {
        text-align: center;
        padding: 1.5rem;
        background: var(--primary-color);
        color: white;
        font-size: 0.8rem;
      }
      
      .retro-border {
        position: relative;
      }
      
      .retro-border::before {
        content: "";
        position: absolute;
        top: -5px;
        left: -5px;
        right: -5px;
        bottom: -5px;
        border: 2px solid var(--accent-color);
        pointer-events: none;
        border-radius: 10px;
      }
    </style>
  </head>
  <body style={`background-image: url('${personalInfo.background}')`}>
    <div class="container retro-border">
      <header class="header">
        <h1>{personalInfo.title}</h1>
        <p>{personalInfo.subtitle}</p>
      </header>
      
      <main class="main-content">
        <section class="info-section">
          <div class="profile-container">
            <!-- 使用本地头像图片 -->
            <img src={LocalAvatar.src} alt="头像" class="avatar" />
            <div class="profile-info">
              <h2>{personalInfo.name}</h2>
              <p>{personalInfo.bio}</p>
			  <p>
				{socialLinks.map((social) => (
				  <a href={social.href} target="_blank" rel="noopener noreferrer" name={social.name}><i class={`${social.icon} contact-icon`}></i></a>
				))}
			  </p>
            </div>
          </div>
          
          <div class="contact-info">
            <h2 class="section-title">联系信息</h2>
            <div class="contact-item">
              <i class="ri-mail-line contact-icon"></i>
              <span><a href={`mailto:${personalInfo.email}`}>{personalInfo.email}</a></span>
            </div>
            <div class="contact-item">
              <i class="ri-map-pin-line contact-icon"></i>
              <span>{personalInfo.location}</span>
            </div>
          </div>
        </section>
        
        <section class="links-section">
          {linkCategories.map((category) => (
            <div class="category">
              <h2>{category.name}</h2>
              <div class="links-grid">
                {category.links.map((link) => (
                  <div class="link-card">
                    <a href={link.url} target="_blank" rel="noopener noreferrer">
                      {link.name}
                    </a>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </section>
      </main>
      
      <footer class="footer">
        <p>{personalInfo.copyright}</p>
      </footer>
    </div>
  </body>
</html>